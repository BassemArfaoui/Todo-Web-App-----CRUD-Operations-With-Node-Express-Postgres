<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Travel Tracker</title>

  <!-- google fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <!-- bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  <!-- css file -->
  <link rel="stylesheet" href="./styles/main.css">

  <style>
    .todo_input::placeholder
    {
      font-weight: bold;
      color: <%= locals.error_color ? error_color : 'darkgray' %>
    }
  </style>
</head>

<body>
  <div  class="container-fluid w-100 bg-dark d-flex justify-content-center align-items-center flex-column gap-4 py-5 px-5" style="min-height:100% ; ">
    <form action="/" method="POST" class="note w-50 d-flex flex-column align-items-center bg-primary " style="border-radius: 12px 12px 0 0;border : 3px solid #343a40;border-bottom:none">

     <% for (const todo of todos) { %>

      <div class="todo d-flex justify-content-between w-100 py-2" style="border-bottom:3px solid #343a40">
        <button type="submit" name="delete" value="<%= todo.id %>" class="m-0 p-0  ms-4 fs-3  fw-bold bg-transparent text-dark"><span class="material-symbols-outlined">delete</span></button>
        <p class="m-0 p-0 d-inline fs-3 fw-bold mx-3"><%= todo.title %></p>
        <button type="submit" name="edit" value="<%= todo.id %>" class="m-0 p-0  me-4 fs-3  fw-bold bg-transparent text-dark"><span class="material-symbols-outlined">edit</span></button>
      </div>

      <% } %>

    </form>

    <form  action="/" method="POST" class="input w-50 d-flex gap-3">
      <input type="text" class="form-control fw-bold w-100 border-3 border-info todo_input" id="" placeholder="<%= locals.error ? error : 'Enter a Todo to add' %>" style="height:45px" name="todo" autocomplete="off" autofocus>
      <input type="submit" value="ADD" class="btn bg-primary w-25 fw-bold" name="add">
    </form>
    
  </div>
</body>

</html>